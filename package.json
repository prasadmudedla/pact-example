{
  "name": "example-pact",
  "private": true,
  "version": "1.0.0",
  "description": "Pact example",
  "scripts": {
    "client": "node client",
    "server": "node server",
    "test-consumer": "NODE_ENV=test mocha client/client.spec.js",
    "test-provider": "NODE_ENV=test node server/consumerTests/verifyPacts.js",
    "publish-pacts": "client/tasks/publish-pacts.sh",
